    "upgrade": "npm-check-updates -u && rm -f package-lock.json && rm -rf node_modules; npm i"
  },
  "type": "module",
  "dependencies": {
    "fontnik": "^0.7.2",
    "tar-stream": "^3.1.7",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=16"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.8",
    "@types/tar-stream": "^3.1.3",
    "@versatiles/release-tool": "^2.2.4",
    "eslint": "^9.21.0",
    "jest": "^29.7.0",
    "npm-check-updates": "^17.1.15",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.25.0"
  }
