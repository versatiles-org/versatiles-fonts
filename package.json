{
  "name": "versatiles-fonts",
  "version": "1.2.0",
  "private": true,
  "scripts": {
    "build": "tsx src/build_fonts.ts",
    "check": "npm run lint; npm run test",
    "lint": "eslint --color .",
    "prepack": "",
    "release": "vrt release-npm",
    "test": "npm run test-typescript",
    "test-coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
